
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section styles{
    <link rel="stylesheet" href="@Url.Content("~/Content/css/jquery.dataTables.css")" />
}
<!-- /section:basics/sidebar -->
<div class="main-content">
    <div class="main-content-inner">
        <!-- #section:basics/content.breadcrumbs -->
        <link href="~/Content/css/custom.css" rel="stylesheet" />
        <div class="breadcrumbs" id="breadcrumbs">
            <script type="text/javascript">
                try { ace.settings.check('breadcrumbs', 'fixed') } catch (e) { }
            </script>

            <ul class="breadcrumb">
                <li>
                    <i class="ace-icon fa fa-home home-icon"></i>
                    <a href="@Url.Action("Index", "Home")">INICIO</a>
                </li>

                <li>
                    <a href="javascript:void(0)">ALMACEN</a>
                </li>
                <li class="active">REGISTRO</li>
                <li class="active">INGRESOS VARIOS</li>
            </ul><!-- /.breadcrumb -->
            <!-- /section:basics/content.searchbox -->
        </div>

        <!-- /section:basics/content.breadcrumbs -->
        <div class="page-content">
            <!-- #section:settings.box -->
            <!-- /section:settings.box -->
            <div class="row">
                <div class="col-xs-12">
                    <!-- PAGE CONTENT BEGINS -->
                    <!-- PAGE CONTENT BEGINS -->
                    <div class="search-area well no-margin-bottom">
                        <form id="CategoriaSearchForm" role="form">
                            <div class="row">
                                <div class="col-md-7">
                                    <div class="input-group">

                                        <input type="text" class="form-control" name="Codigosearch" id="Codigosearch" placeholder="Codigo" onkeypress="buscarCategoria(event)">
                                        <div class="input-group-btn">

                                        </div>
                                        <input type="text" class="form-control" name="Descripcionsearch" id="Descripcionsearch" placeholder="Descripción" onkeypress="buscarCategoria(event)">
                                        <div class="input-group-btn">
                                            <button type="button" id="btnSearchCategoriaLinea" class="btn btn-success btn-sm">
                                                <i class="ace-icon fa fa-search icon-on-right bigger-110 right"></i>Buscar
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix">
                                    <div class="pull-right tableTools-container">
                                        <div class="dt-buttons btn-overlap btn-group">
                                            <a id="btnAgregarCategoria" data-toggle="tooltip" class="dt-button buttons-collection buttons-colvis btn btn-white btn-primary btn-bold" tabindex="0" aria-controls="dynamic-table" data-original-title="Nuevo" title="Nuevo">
                                                <span><i class="fa fa-plus-circle bigger-110 blue"></i> </span>
                                            </a>

                                            <a id="btnEditarCategoria" data-toggle="tooltip" class="dt-button buttons-copy buttons-html5 btn btn-white btn-primary btn-bold" tabindex="0" aria-controls="dynamic-table" data-original-title="" title="Editar">
                                                <span><i class="fa fa-pencil bigger-110 pink"></i> </span>
                                            </a>
                                            <a id="btnEliminarCategoria" data-toggle="tooltip" class="dt-button buttons-csv buttons-html5 btn btn-white btn-primary btn-bold" tabindex="0" aria-controls="dynamic-table" data-original-title="" title="Eliminar">
                                                <span><i class="fa fa-trash-o bigger-110 orange"> </i></span>
                                            </a>
                                            <a id="btnEstadoCategoria" data-toggle="tooltip" class="dt-button buttons-print btn btn-white btn-primary btn-bold" tabindex="0" aria-controls="dynamic-table" data-original-title="" title="Cambiar estado">
                                                <span><i class="fa fa-link bigger-110 grey"></i> </span>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <br />

                    <div class="col-xs-12">
                        <div class="table-header">
                            Resultado "Nota de ingreso"
                        </div>
                        <div class="dataTables_wrapper form-inline no-footer">
                            <div class="table-responsive">
                                <table id="CategoriaDataTable" class="table table-bordered" cellspacing="0" role="grid" aria-describedby="dynamic-table_info">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th class="hidden-120 center">Codigo</th>
                                            <th class="hidden-120">Descripci&oacute;n</th>
                                            <th class="hidden-480">Estado</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- PAGE CONTENT ENDS -->
                </div><!-- /.col -->
            </div><!-- /.row -->
            <!-- FILTER BEGINS-->
            <!-- FILTER ENDS-->


        </div><!-- /.page-content -->
    </div>
</div><!-- /.main-content -->
@section scripts{
    <!-- page specific plugin scripts -->
    <script src="@Url.Content("~/Content/js/jquery.dataTables.min.js")"></script>
    <script src="@Url.Content("~/Content/js/jquery.dataTables.fnReloadAjax.js")"></script>
    <script src="@Url.Content("~/Content/js/jquery.inputlimiter.1.3.1.js")"></script>
    <script src="@Url.Content("~/Content/js/jquery.validate.js")"></script>
    <script src="@Url.Content("~/Content/js/additional-methods.js")"></script>
    <script src="@Url.Content("~/Content/js/fuelux/fuelux.wizard.js")"></script>
    <script src="@Url.Content("~/Content/js/jquery.gritter.js")"></script>
    <script src="@Url.Content("~/Content/js/jquery.blockUI.js")"></script>

    <!-- inline scripts related to this page -->
    <script src="@Url.Content("~/Content/js/viewsJs/NotaIngreso.js")"></script>
    <!-- Ajax BlockUi scripts -->
    <script type="text/javascript">
        var pageBlocked = false;
        var handlerActivo = false;

        $(document).ready(function () {
            $.blockUI.defaults.baseZ = 100000;
            $.blockUI.defaults.overlayCSS.opacity = 0.4;
            $.blockUI.defaults.css.backgroundColor = "transparent";
            $.blockUI.defaults.css.border = '0px none';
            $.blockUI.defaults.fadeIn = 100,
            $.blockUI.defaults.fadeOut = 100,

            $(document).ajaxSend(function () {
                if (!pageBlocked) {
                    $.blockUI({
                        message: "Espere un momento por favor",
                        css: {
                            border: 'none',
                            padding: '15px',
                            backgroundColor: '#000',
                            '-webkit-border-radius': '10px',
                            '-moz-border-radius': '10px',
                            opacity: 1,
                            color: '#fff'
                        },
                        onBlock: function () {
                            pageBlocked = true;
                        }
                    });
                }
            }).ajaxStop(function () {
                jQuery.unblockUI();
                pageBlocked = false;
            });

        });
    </script>

}




